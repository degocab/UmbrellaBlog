@{
    Layout = "~/Views/Shared/_Layout.cshtml";
   
        ViewBag.Title = "Umbrella Blog Posts";
  
}
<script src="~/Scripts/blogDataService.js"></script>
<script src="~/Scripts/BlogHtmlRender.js"></script>

<script type="text/javascript">
    function Sort() {
        var result = document.getElementById("formInput").value;
        var APIRequest = new XMLHttpRequest();
        APIRequest.open('GET', 'http://localhost:59924/api/posts/filter/'+result);
        APIRequest.onload = function () {

            var postData = JSON.parse(APIRequest.responseText);
            renderHTML(postData);
        };
        APIRequest.send();

       
    }
</script>
<style>
    a {
        color: white;
