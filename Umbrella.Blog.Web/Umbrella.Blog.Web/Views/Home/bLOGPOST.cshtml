    #approve-Btn {

        background-color: limegreen;
        border-radius: 3px;
        border-bottom-right-radius: 0;
        border-bottom-left-radius: 0;
        border: none;
        padding-top: 8px;
        outline: solid;
        cursor: pointer;
        padding: 14px 16px;
        transition: 0.5s;
        outline-color: transparent;
    }

    #delete-Btn {

        background-color: red;
        border-radius: 3px;
        padding-top: 8px;
        border-bottom-right-radius: 0;
        border-bottom-left-radius: 0;
        border: none;
        outline: solid;
        cursor: pointer;
        padding: 14px 16px;
        transition: 0.5s;
        outline-color: transparent;
    }

    #edit-Btn {

        background-color: deepskyblue;
        border-radius: 3px;
        border-bottom-right-radius: 0;
        border-bottom-left-radius: 0;
        border: none;
        padding-top: 8px;
        outline: solid;
        cursor: pointer;
        padding: 14px 16px;
        transition: 0.5s;
        outline-color: transparent;
    }

    /* Change background color of buttons on hover */
    #approve-Btn:hover {
        background-color: lightgreen;
        opacity: 1;
    }

    #delete-Btn:hover {
        background-color: lightcoral;
        opacity: 1;
    }
    #edit-Btn:hover {
        background-color: lightblue;
        opacity: 1;
    }
