    }*/
</style>
<input id="blogId" hidden="hidden" value="@Url.RequestContext.RouteData.Values["id"]" />
<div align="right">

   @if (User.IsInRole("Admin") || User.IsInRole("Employee"))
   {
       <button id="edit-Btn" class="tablinks"  onclick="window.location.href='/TinyMCESample/Edit?postId=@Url.RequestContext.RouteData.Values["id"]'">Edit</button>
       
   }

    @if (User.IsInRole("Admin"))
    {
        
        <button id="approve-Btn" class="tablinks" onclick="approvePost()">Approve</button>
        <button id="delete-Btn"  class="tablinks" onclick="deletePost()">Delete</button>

    }
</div>

<div id="blogContent" class="col-md-12">

</div>



   


