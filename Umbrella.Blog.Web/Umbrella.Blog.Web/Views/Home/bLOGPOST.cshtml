
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<style>
    #blogComment {
        background-color: #dddddd;
        border: .5px solid #000;
        border-radius: 2px;
        -webkit-filter: drop-shadow(5px 5px 5px #222);
        filter: drop-shadow(5px 5px 5px #222);
        position: relative;
        padding: 0px;
        margin: 0px;
    }

    #blogContent {
        border-top-right-radius: 0px;
    }
